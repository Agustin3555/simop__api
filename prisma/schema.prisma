model TipoRecepcion {
  // Fields -----------------------------------------------------------------------------------------------------
  id          Int       @id @default(autoincrement())
  nombre      String    @unique

  creado      DateTime  @default(now())
  modificado  DateTime  @updatedAt

  // Relations --------------------------------------------------------------------------------------------------
  recepciones Recepcion[]
