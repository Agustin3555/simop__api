model TipoTematicaObra {
  // Fields -----------------------------------------------------------------------------------------------------
  id          Int       @id @default(autoincrement())
  nombre      String    @unique

  creado      DateTime  @default(now())
  modificado  DateTime  @updatedAt

  // Relations --------------------------------------------------------------------------------------------------
  obras Obra[]
}

model TipoEstadoObra {
  // Fields -----------------------------------------------------------------------------------------------------
  id          Int       @id @default(autoincrement())
  nombre      String    @unique

  creado      DateTime  @default(now())
  modificado  DateTime  @updatedAt

  // Relations --------------------------------------------------------------------------------------------------
  obras Obra[]
}

model TipoRedeterminacion {
  // Fields -----------------------------------------------------------------------------------------------------
  id          Int       @id @default(autoincrement())
  nombre      String    @unique

  creado      DateTime  @default(now())
  modificado  DateTime  @updatedAt

